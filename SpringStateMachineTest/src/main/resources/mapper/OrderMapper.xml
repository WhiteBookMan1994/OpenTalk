<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="con.dxc.springsmtest.mapper.OrderMapper">

    <select id="selectByOrderNo"  resultType="con.dxc.springsmtest.model.OrderDO">
        select * from dxc_order where order_no = #{orderNo}
    </select>

    <insert id="insert" parameterType="con.dxc.springsmtest.model.OrderDO">
        insert into dxc_order (order_no,user_id,phone,order_status,amount,address)
                values (#{orderNo},#{userId},#{phone},#{orderStatus},#{amount},#{address})
    </insert>

    <update id="update" parameterType="con.dxc.springsmtest.model.OrderDO">
        update dxc_order set
            order_status = #{orderStatus}
        where order_no = #{orderNo}
    </update>
</mapper>